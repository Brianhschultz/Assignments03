<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">
    <Button
    android:id="@+id/timerButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Timer"
    tools:layout_editor_absoluteX="30dp"
    tools:layout_editor_absoluteY="16dp"
    tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onTimerButtonClick"/>
    <Button
        android:id="@+id/alarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/timerButton"
        android:layout_alignLeft="@+id/timerButton"
        android:layout_alignStart="@+id/timerButton"
        android:onClick="onAlarmButtonClick"/>
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/alarmButton"
        android:layout_alignLeft="@+id/alarmButton"
        android:layout_alignStart="@+id/alarmButton"
        android:onClick="onExitButtonClick"/>
</RelativeLayout>